/*-----QWidget-----*/
QWidget
{
	background-color: #646464;
	color: #eee;

}


/*-----QLabel-----*/
QLabel
{
    background-color: transparent;
    color: #000;
}


/*-----QMenuBar-----*/
QMenuBar
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(185, 185, 185, 255),stop:1 rgba(183, 183, 183, 255));
	border: 1px solid #4f4f4f;
	color: #000;

}


QMenuBar::item
{
	background-color: transparent;

}


QMenuBar::item:selected
{
	background-color: #d1d4da;
	color: #000;

}


QMenuBar::item:pressed
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(89, 89, 89, 255),stop:1 rgba(66, 66, 66, 255));
	border: 1px solid #000;
	color: #fff;

}


/*-----QMenu-----*/
QMenu
{
    background-color: #fff;
    border: 1px solid #222;
    padding: 4px;
	color: #000;

}


QMenu::item
{
    background-color: transparent;
    padding: 2px 20px 2px 20px;

}


QMenu::item:disabled
{
    color: #555;
    background-color: transparent;
    padding: 2px 20px 2px 20px;

}


QMenu::item:selected
{
    background-color: #91c9f7;
    color: #000;

}


/*-----QToolBar-----*/
QToolBar
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(185, 185, 185, 255),stop:1 rgba(183, 183, 183, 255));
	border-top: none;
	border-bottom: 1px solid #343434;
	border-left: 1px solid #343434;
	border-right: 1px solid #343434;

}


/*-----QToolButton-----*/
QToolButton
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(232, 232, 232, 255),stop:1 rgba(190, 190, 190, 255));
	color: #eee;
	border: 1px solid #4f4f4f;
	border-radius: 4px;
	padding: 2px;
	margin-left: 5px
}


QToolButton:hover
{
	background-color: #8b8b8b;

}


QToolButton:pressed
{
	background-color: #4f4f4f;
	border: 1px solid gray;

}


QToolButton:checked
{
	background-color: #4f4f4f;
	border: 1px solid gray;
}


/*-----QDockWidget-----*/
QDockWidget
{
	color: #ddd;
	font-weight: bold;
}


QDockWidget > QWidget
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(185, 185, 185, 255),stop:1 rgba(183, 183, 183, 255));
	border: 1px solid #000;
	border-top: none;
}


QDockWidget::title
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(89, 89, 89, 255),stop:1 rgba(66, 66, 66, 255));
	border: 1px solid #000;
	padding: 2px;

}


QDockWidget::close-button
{
	max-width: 14px;
	max-height: 14px;
	margin-top:1px;

}


QDockWidget::float-button
{
	max-width: 14px;
	max-height: 14px;
	margin-top:1px;

}


QDockWidget::close-button:hover
{
	border: none;
	background-color: none;

}


QDockWidget::float-button:hover
{
	border: none;
	background-color: none;

}


/*-----QLineEdit-----*/
QLineEdit
{
	background-color: #fff;
	color : #000;
	border: 1px solid #343434;
	border-radius : 2px;
	padding: 2px;

}


/*-----QSpinBox & QDoubleSpinBox-----*/
QSpinBox,
QDoubleSpinBox
{
    background-color: #fff;
	color : #000;
	border: 1px solid #343434;
	padding: 2px;

}


QSpinBox::up-button,
QDoubleSpinBox::up-button
{
	background-color: #777777;
    width: 16px;
    border-width: 1px;

}


QSpinBox::up-button:hover,
QDoubleSpinBox::up-button:hover
{
	background-color: #585858;

}


QSpinBox::up-button:pressed,
QDoubleSpinBox::up-button:pressed
{
	background-color: #252525;
    width: 16px;
    border-width: 1px;

}


QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow
{
    image: url(://arrow-up.png);
    width: 7px;
    height: 7px;

}


QSpinBox::down-button,
QDoubleSpinBox::down-button
{
	background-color: #777777;
    width: 16px;
    border-width: 1px;

}


QSpinBox::down-button:hover,
QDoubleSpinBox::down-button:hover
{
	background-color: #585858;

}


QSpinBox::down-button:pressed,
QDoubleSpinBox::down-button:pressed
{
	background-color: #252525;
    width: 16px;
    border-width: 1px;

}


QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow
{
    image: url(://arrow-down.png);
    width: 7px;
    height: 7px;

}


/*-----QListView-----*/
QListView
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(185, 185, 185, 255),stop:1 rgba(183, 183, 183, 255));
    border : none;
    color: #000;
    show-decoration-selected: 1;
    outline: 0;
	border: 1px solid #000;
	border-top: none;

}


QListView::disabled
{
	background-color: #656565;
	color: #1b1b1b;
    border: 1px solid #656565;

}


QListView::item
{
    padding: 1px;

}


QListView::item:alternate
{
    background-color: #4a4b4d;

}


QListView::item:selected
{
    border: 1px solid #3c3c3e;
    border: none;
    color: rgb(0, 0, 0);

}


QListView::item:selected:!active
{
    background-color: #3c3c3e;
    border: none;
    color: #eee;

}


QListView::item:selected:active
{
    background-color: #3c3c3e;
    border: none;
    color: #eee;

}


QListView::item:hover {
    background-color: #262626;
    border: none;
    color: white;

}


/*-----QScrollBar-----*/
QScrollBar:horizontal
{
    border: 1px solid #222222;
    background-color: #3d3d3d;
    height: 15px;
    margin: -2px 16px 0 16px;

}


QScrollBar::handle:horizontal
{
    background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(232, 232, 232, 255),stop:1 rgba(190, 190, 190, 255));
    min-height: 20px;

}


QScrollBar::add-line:horizontal
{
    background-color: #3d3d3d;
    width: 17px;
    subcontrol-position: right;
    subcontrol-origin: margin;

}


QScrollBar::sub-line:horizontal
{
    border: 1px solid #3d3d3d;
    background-color: #3d3d3d;
    width: 17px;
    subcontrol-position: left;
    subcontrol-origin: margin;

}


QScrollBar::right-arrow:horizontal
{
    image: url(://arrow-right.png);
    width: 6px;
    height: 6px;

}


QScrollBar::left-arrow:horizontal
{
    image: url(://arrow-left.png);
    width: 6px;
    height: 6px;

}


QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
    background: none;

}


QScrollBar:vertical
{
    background-color: #3d3d3d;
    width: 15px;
    margin: 16px 0px 16px -2px;
    border: 1px solid #222222;

}


QScrollBar::handle:vertical
{
    background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(232, 232, 232, 255),stop:1 rgba(190, 190, 190, 255));
    min-height: 20px;

}


QScrollBar::add-line:vertical
{
    border: 1px solid #3d3d3d;
    background-color: #3d3d3d;
    height: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;

}


QScrollBar::sub-line:vertical
{
    border: 1px solid #3d3d3d;
    background-color: #3d3d3d;
    height: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;

}


QScrollBar::up-arrow:vertical
{
    image: url(://arrow-up.png);
    width: 6px;
    height: 6px;

}


QScrollBar::down-arrow:vertical
{
    image: url(://arrow-down.png);
    width: 6px;
    height: 6px;

}


QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
    background: none;

}


/*-----QStatusBar-----*/
QStatusBar
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(185, 185, 185, 255),stop:1 rgba(183, 183, 183, 255));
	border: 1px solid #4f4f4f;
	color: #000;

}


/*-----QSizeGrip-----*/
QSizeGrip
{
	background-color: image("./ressources/sizegrip.png"); /*To replace*/
	border: none;

}

